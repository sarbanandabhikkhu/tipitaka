[
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "centered"
    },
    "innerText": "Namo tassa bhagavato arahato sammāsambuddhassa"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "book"
    },
    "innerText": "Saddanītippakaraṇaṃ (padamālā)"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "subsubhead"
    },
    "innerText": "Ganthārambhakathā"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "children": [
      "Dhīrehi ",
      " magganāyena, yena buddhena desitaṃ;"
    ],
    "innerText": "Dhīrehi magganāyena, yena buddhena desitaṃ;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Sitaṃ dhammamidhaññāya, ñāyate amataṃ padaṃ."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Taṃ namitvā mahāvīraṃ, sabbaññuṃ lokanāyakaṃ;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Mahākāruṇikaṃ seṭṭhaṃ, visuddhaṃ suddhidāyakaṃ."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Saddhammañcassa pūjetvā, suddhaṃ santamasaṅkhataṃ;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Atakkāvacaraṃ suṭṭhu, vibhattaṃ madhuraṃ sivaṃ."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Saṅghassa ca’ñjaliṃ katvā, puññakkhettassa tādino;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Sīlasamādhipaññādi-visuddhaguṇajotino."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Namassanādipuññassa, katassa ratanattaye;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Tejasāhaṃ pahantvāna, antarāye asesato."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Lokanītiviyattassa, satthu saddhammanītino;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "children": [
      "Sāsanatthaṃ pavakkhāmi, ",
      {
        "tagName": "span",
        "attributes": {
          "name": "class",
          "value": "bld"
        },
        "innerText": "saddanīti"
      },
      "manākulaṃ."
    ],
    "innerText": "Sāsanatthaṃ pavakkhāmi, saddanītimanākulaṃ."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Āsavakkhayalābhena, hoti sāsanasampadā;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Āsavakkhayalābho ca, saccādhigamahetuko."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "children": [
      "Saccādhigamanaṃ ",
      " tañca, paṭipattissitaṃ mataṃ;"
    ],
    "innerText": "Saccādhigamanaṃ tañca, paṭipattissitaṃ mataṃ;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Paṭipatti ca sā kāmaṃ, pariyattiparāyaṇā."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Pariyattābhiyuttānaṃ, viditvā saddalakkhaṇaṃ;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Yasmā na hoti sammoho, akkharesu padesu ca."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Yasmā cāmohabhāvena, akkharesu padesu ca;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Pāḷiyatthaṃ vijānanti, viññū sugatasāsane."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Pāḷiyatthāvabodhena, yoniso satthusāsane;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Sappaññā paṭipajjanti, paṭipattimatandikā."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Yoniso paṭipajjitvā, dhammaṃ lokuttaraṃ varaṃ;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Pāpuṇanti visuddhāya, sīlādipaṭipattiyā."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Tasmā tadatthikā suddhaṃ, nayaṃ nissāya viññunaṃ;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "children": [
      "Bhaññamānaṃ mayā ",
      {
        "tagName": "span",
        "attributes": {
          "name": "class",
          "value": "bld"
        },
        "innerText": "sadda-nītiṃ"
      },
      " gaṇhantu sādhukaṃ."
    ],
    "innerText": "Bhaññamānaṃ mayā sadda-nītiṃ gaṇhantu sādhukaṃ."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Dhātu dhātūhi nipphanna-rūpāni ca salakkhaṇo;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Sandhināmādibhedo ca, padānaṃ tu vibhatti ca."
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gatha1"
    },
    "innerText": "Pāḷinayādayocceva-mettha nānappakārato;"
  },
  {
    "tagName": "p",
    "attributes": {
      "name": "class",
      "value": "gathalast"
    },
    "innerText": "Sāsanassopakārāya, bhavissati vibhāvanā."
  }
]